; -----------------------------------------------------------------------------; \file  winhdr.inc; \note  (c) 2025 by Jens Kallup - paule32;        all rights reserved.;; \desc  Create a dBASE MS-Windows 11 64-bit Pro EXE.; -----------------------------------------------------------------------------; PE-Header (PE32+) + Optional Header + Section Table; -----------------------------------------------------------------------------bits 32org 0pe_header:    db 'P','E',0,0                 ; "PE\0\0"
    ; COFF    dw 0x8664                      ; AMD64    dw 3                           ; Sections: .text, .idata, .data    dd 0,0,0    dw 0xF0                        ; SizeOfOptionalHeader (PE32+)    dw 0x0222                      ; EXECUTABLE|LAA  (Relocs stripped lassen wir weg)
%include 'precalc.asm'
    ; Optional Header (PE32+)    dw 0x020B                      ; Magic    db 0,0    dd TEXT_RAW_SIZE               ; SizeOfCode    dd IDATA_RAW_SIZE + DATA_RAW_SIZE ; SizeOfInitializedData    dd 0                           ; BSS    dd RVA_TEXT(_start)            ; EntryPoint    dd TEXT_VA                     ; BaseOfCode    dq IMAGE_BASE                  ; ImageBase    dd SECTALIGN                   ; SectionAlignment    dd FILEALIGN                   ; FileAlignment    dw 6,0                         ; OS Version    dw 0,0                         ; Image Version    dw 6,0                         ; Subsystem Version    dd 0    dd SIZEOF_IMAGE                ; SizeOfImage    dd SIZEOF_HEADERS              ; SizeOfHeaders    dd 0                           ; Checksum    dw 2                           ; Subsystem = Windows GUI    dw 0x0100                      ; DllCharacteristics: NXCompat (kein ASLR)    dq 0x0000000000100000          ; Stack Reserve    dq 0x0000000000001000          ; Stack Commit    dq 0x0000000000100000          ; Heap Reserve    dq 0x0000000000001000          ; Heap Commit    dd 0    dd 16
    ; Data Directories    dd 0,0                         ; 0 Export    dd RVA_IDATA(import_dir), (import_dir_end - import_dir) ; 1 Import    dd 0,0                         ; 2 Resource    dd 0,0                         ; 3 Exception    dd 0,0                         ; 4 Security    dd 0,0                         ; 5 Base Reloc    dd 0,0                         ; 6 Debug    dd 0,0                         ; 7 Architecture    dd 0,0                         ; 8 Global Ptr    dd 0,0                         ; 9 TLS    dd 0,0                         ; 10 Load Config    dd 0,0                         ; 11 Bound Import    dd RVA_IDATA(iat_start), (iat_end - iat_start)          ; 12 IAT    dd 0,0                         ; 13 Delay Import    dd 0,0                         ; 14 COM    dd 0,0                         ; 15 Reserved
    ; Section .text    db '.text',0,0,0    dd TEXT_VSIZE    dd TEXT_VA    dd TEXT_RAW_SIZE    dd TEXT_RAW_PTR    dd 0,0    dw 0,0    dd 0x60000020                  ; CODE|EXECUTE|READ
    ; Section .idata    db '.idata',0,0    dd IDATA_VSIZE    dd IDATA_VA    dd IDATA_RAW_SIZE    dd IDATA_RAW_PTR    dd 0,0    dw 0,0    dd 0xC0000040                  ; INIT_DATA|READ|WRITE
    ; --- Section Table (.data)    db '.data',0,0,0    dd DATA_VSIZE    dd DATA_VA    dd DATA_RAW_SIZE    dd DATA_RAW_PTR    dd 0,0    dw 0,0    dd 0xC0000040      ; READ | WRITE | INIT_DATA
headers_end: